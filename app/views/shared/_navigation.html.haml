%header.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %strong= link_to 'Avec', root_path, class: 'navbar-brand'
    %nav
      %ul.nav.navbar-nav.pull-right
        - if @current_user
          %li
            %a= @current_user.nickname
          %li= link_to 'Log out', logout_path, :method => :delete
        - else
          %li= link_to 'Log in', login_path

