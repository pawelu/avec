.message-form
  %h1 Nowa wiadomość
  .col-md-8.well
    = simple_form_for(@message, defaults: { wrapper_html: { class: 'form-group'}, input_html: { class: 'form-control' } }) do |f|
      .col-md-6
        = f.input :recipient, wrapper_html: { class: 'span4' }, input_html: { value: params[:recipient] }
        = f.input :content, as: :text, wrapper_html: { class: 'span4' }, input_html: { rows: 6 }
        = f.button :submit, 'Zapisz', :class => 'btn-primary'
